.form-group
  position relative
  label
    position absolute
    bottom 8px
    left 20px
    margin 0 
    transition 0.2s all ease
  input[type="text"], input[type="password"]
    margin-top 60px 
    transition 0.2s all ease
    &:focus + label, &:valid + label
      bottom 40px
      font-size 16px
    &:focus, &:valid, &:invalid
      outline none
      background #EEE   
  
    

form
  background #FFF
  padding 20px
  position relative
  box-shadow 0 0 2px rgba(0, 0, 0, 0.12),0 2px 4px rgba(0, 0, 0, 0.24)
  font-size 1.4rem
  h3
    margin-bottom 30px 
  label
    display block
    margin 30px 0
  input
    font-size 1.4rem
    width 40% 
    margin-left 10px 
    
    &[type="text"], &[type="password"]
      border none
      border-bottom 3px solid #ccc
  .close
    width 40px 
    position absolute
    top 10px
    right 10px  


input[type=range]{
    -webkit-appearance: none;
    width 150px 
}

input[type=range]::-webkit-slider-runnable-track {
    width: 300px;
    height: 5px;
    background: #ddd;
    border: none;
    border-radius: 3px;
}

input[type=range]::-webkit-slider-thumb {
    -webkit-appearance: none;
    border: none;
    height: 22px;
    width: 22px;
    border-radius: 50%;
    background: freeze;
    box-shadow 0 0 0 5px rgba(freeze, 0.3)
    margin-top: -8px;
}
input[type=range]:focus {
    outline: none;
}

input[type=range]:focus::-webkit-slider-runnable-track {
    background: #ccc;
}